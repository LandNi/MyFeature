<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/radioGroup" />


    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_sale"
            style="@style/style_RadioButton"
            android:checked="true"
            android:drawableTop="@drawable/rb_sale_selector"
            android:text="收款" />

        <RadioButton
            android:id="@+id/rb_trans"
            style="@style/style_RadioButton"
            android:drawableTop="@drawable/rb_trans_selector"
            android:text="记录" />

        <RadioButton
            android:id="@+id/rb_manage"
            style="@style/style_RadioButton"
            android:drawableTop="@drawable/rb_manage_selector"
            android:text="管理" />
    </RadioGroup>

</RelativeLayout>
